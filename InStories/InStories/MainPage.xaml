<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InStories.MainPage"
             BackgroundImageSource="back.png">
    
    <Grid VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="136*" /><!--отступ-->
            <RowDefinition Height="49*" />
            <RowDefinition Height="40*" /><!--отступ-->
            <RowDefinition Height="200" />
            <RowDefinition Height="30*" /> <!--отступ-->
            <RowDefinition Height="41" />
            <RowDefinition Height="30*" /><!--отступ-->
            <RowDefinition Height="1*" />
            <RowDefinition Height="15*" /><!--отступ-->
            <RowDefinition Height="30*" />
            <RowDefinition Height="10*" /><!--отступ-->
            <RowDefinition Height="30*" />
            <RowDefinition Height="65*" /><!--отступ-->
            <RowDefinition Height="24*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!--1-->
        <Label Text="InStories" FontAttributes="Bold" FontFamily="Italiana" FontSize="45" TextColor="White" HorizontalOptions="Center"
                Grid.Row="1" Grid.Column="0"/>

        <!--3-->
        <BoxView BackgroundColor="#D9D9D9" Opacity="0.6" CornerRadius="15"
                 Margin="39,0,39,0" HeightRequest="200" Grid.Row="3" Grid.Column="0"/>

        <StackLayout Margin="60, 29.23, 60, 0" VerticalOptions="FillAndExpand" Grid.Row="3" Grid.Column="0">
            <Label Text="Логин" FontFamily="Istok Web" FontSize="20" TextColor="White" Margin="3,0,0,0"/>
            <Entry x:Name="loginEntry" FontFamily="Istok Web" Margin="0,-10,0,0" TextColor="White" ClearButtonVisibility="WhileEditing"/>
            <Label Text="Пароль" FontFamily="Istok Web" FontSize="20" TextColor="White" Margin="3,15,0,0"/>
            <Entry x:Name="passwordEntry" FontFamily="Istok Web" IsPassword="True" Margin="0,-10,0,0" TextColor="White" ClearButtonVisibility="WhileEditing"/>
        </StackLayout>

        <!--5-->
        <Button BackgroundColor="#D9D9D9" Opacity="0.6" CornerRadius="27"
                WidthRequest="154" HeightRequest="41" HorizontalOptions="Center"
                TextColor="White" Clicked="Button_Clicked" Grid.Row="5" Grid.Column="0"/>
        <Label x:Name="button" Text="Войти" FontFamily="Istok Web" FontSize="20" TextColor="White" 
               Margin="0, 5, 0, 0" HorizontalOptions="Center"
               Grid.Row="5" Grid.Column="0"/>
        <Button BackgroundColor="#D9D9D9" Opacity="0.0" CornerRadius="27"
                WidthRequest="154" HeightRequest="41" HorizontalOptions="Center"
                TextColor="White" Clicked="Button_Clicked" Grid.Row="5" Grid.Column="0"/>

        <!--7-->
        <BoxView BackgroundColor="White" HeightRequest="0.5" WidthRequest="154"
                 HorizontalOptions="Center" Grid.Row="7" Grid.Column="0"/>

        <!--9-->
        <Button BackgroundColor="#D9D9D9" Opacity="0.0" CornerRadius="27"
                WidthRequest="200" HeightRequest="40" HorizontalOptions="Center"
                TextColor="White" Grid.Row="9" Grid.Column="0"/>
        <Label Text="Зарегистрироваться" FontFamily="Istok Web" FontSize="20" TextColor="White"
                HorizontalOptions="Center" Grid.Row="9" Grid.Column="0"/>
        <!--11-->
        <Button BackgroundColor="#D9D9D9" Opacity="0.0" CornerRadius="27"
                WidthRequest="200" HeightRequest="40" HorizontalOptions="Center"
                TextColor="White" Grid.Row="11" Grid.Column="0"/>
        <Label Text="Войти через Google" FontFamily="Istok Web" FontSize="20" TextColor="White"
                HorizontalOptions="Center" Grid.Row="11" Grid.Column="0"/>
        <!--13-->
        <Label Text="by Ingini" FontFamily="Istok Web" FontSize="15" TextColor="White"
                 HorizontalOptions="Center" Grid.Row="13" Grid.Column="0"/>

    </Grid>

</ContentPage>